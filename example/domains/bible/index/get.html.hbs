<div class="max-w-4xl mx-auto px-6 py-8" id="bible-verse-container">
    <!-- Debug Information -->
    <div class="bg-white/90 backdrop-blur-sm p-4 mb-6 rounded-xl border border-blue-200 font-mono text-sm shadow-lg">
        <h4 class="font-semibold text-blue-900 mb-3 text-base">Debug Info</h4>
        <div class="space-y-1 text-blue-700">
            <p>VM exists: {{#if vm}}<span class="text-emerald-600 font-medium">YES</span>{{else}}<span class="text-red-500 font-medium">NO</span>{{/if}}</p>
            <p>VM.bible exists: {{#if vm.bible}}<span class="text-emerald-600 font-medium">YES</span>{{else}}<span class="text-red-500 font-medium">NO</span>{{/if}}</p>
            <p>VM.bible length: <span class="font-medium">{{vm.bible.length}}</span></p>
            <p class="mt-2">VM content: <span class="text-blue-600">{{json vm}}</span></p>
        </div>
        <hr class="my-3 border-blue-200">
        <details class="text-blue-700">
            <summary class="cursor-pointer hover:text-blue-900 transition-colors">Raw data dump</summary>
            <pre class="mt-2 text-xs bg-blue-50 p-3 rounded-lg overflow-x-auto">{{json this}}</pre>
        </details>
    </div>

    {{#if vm.bible}}
        {{#with vm.bible}}
        <div class="text-center mb-8">
            <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-amber-200/50 max-w-3xl mx-auto">
                <!-- Translation Info Header -->
                <div class="mb-8 pb-6 border-b border-amber-100">
                    <h1 class="text-3xl font-bold text-gray-800 mb-2">{{translation.name}}</h1>
                    <div class="flex flex-wrap justify-center gap-4 text-sm">
                        <span class="bg-gradient-to-r from-amber-500 to-orange-500 text-white px-4 py-2 rounded-full font-semibold shadow-md">
                            {{translation.language}}
                        </span>
                        <span class="bg-gradient-to-r from-blue-500 to-indigo-500 text-white px-4 py-2 rounded-full font-semibold shadow-md">
                            {{translation.identifier}}
                        </span>
                        <span class="bg-gradient-to-r from-green-500 to-emerald-500 text-white px-4 py-2 rounded-full font-semibold shadow-md">
                            {{translation.license}}
                        </span>
                    </div>
                </div>

                <!-- Random Verse Section -->
                <div class="mb-8">
                    <h2 class="text-xl font-semibold text-gray-700 mb-6">Daily Verse</h2>
                    
                    <!-- Verse Reference -->
                    <div class="mb-6">
                        <h3 class="text-2xl font-bold bg-gradient-to-r from-amber-600 to-orange-600 bg-clip-text text-transparent">
                            {{random_verse.book}} {{random_verse.chapter}}:{{random_verse.verse}}
                        </h3>
                        <p class="text-gray-500 text-sm mt-1">Book ID: {{random_verse.book_id}}</p>
                    </div>

                    <!-- Verse Text -->
                    <div class="bg-gradient-to-r from-amber-50 to-orange-50 p-8 rounded-xl border border-amber-200 shadow-inner">
                        <blockquote class="text-lg leading-relaxed text-gray-800 font-medium italic">
                            "{{random_verse.text}}"
                        </blockquote>
                    </div>

                    <!-- Attribution -->
                    <div class="mt-4 text-right">
                        <cite class="text-gray-600 font-semibold">
                            â€” {{random_verse.book}} {{random_verse.chapter}}:{{random_verse.verse}}
                        </cite>
                        <p class="text-xs text-gray-500 mt-1">{{translation.name}}</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-wrap gap-4 justify-center">
                    <button hx-get="/bible" 
                            hx-target="#bible-verse-container" 
                            hx-swap="outerHTML"
                            class="bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white px-8 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                        Get New Verse
                    </button>
                    <button class="bg-gradient-to-r from-blue-500 to-indigo-500 hover:from-blue-600 hover:to-indigo-600 text-white px-8 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                        Share Verse
                    </button>
                    <button class="bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 text-white px-8 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                        Read Chapter
                    </button>
                </div>
            </div>
        </div>
        {{/with}}
    {{else}}
        <div class="text-center py-20">
            <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-12 shadow-2xl border border-amber-200/50 max-w-md mx-auto">
                <div class="w-20 h-20 bg-gradient-to-r from-amber-100 to-orange-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <div class="w-10 h-10 bg-gradient-to-r from-amber-400 to-orange-400 rounded-full"></div>
                </div>
                <h2 class="text-3xl font-bold bg-gradient-to-r from-amber-600 to-orange-600 bg-clip-text text-transparent mb-4">No Bible Data Found</h2>
                <p class="text-gray-600 mb-8 text-lg">Unable to load Bible verse information at this time.</p>
                <button class="bg-gradient-to-r from-amber-500 via-orange-500 to-red-500 hover:from-amber-600 hover:via-orange-600 hover:to-red-600 text-white px-8 py-4 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 inline-block">
                    Reload
                </button>
            </div>
        </div>
    {{/if}}
</div>
