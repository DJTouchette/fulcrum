<div class="max-w-7xl mx-auto px-6 py-8">
    <!-- Debug Information -->
    <div class="bg-white/90 backdrop-blur-sm p-4 mb-6 rounded-xl border border-purple-200 font-mono text-sm shadow-lg">
        <h4 class="font-semibold text-purple-900 mb-3 text-base">Debug Info</h4>
        <div class="space-y-1 text-purple-700">
            <p>VM exists: {{#if vm}}<span class="text-emerald-600 font-medium">YES</span>{{else}}<span class="text-red-500 font-medium">NO</span>{{/if}}</p>
            <p>VM.users exists: {{#if vm.users}}<span class="text-emerald-600 font-medium">YES</span>{{else}}<span class="text-red-500 font-medium">NO</span>{{/if}}</p>
            <p>VM.users length: <span class="font-medium">{{vm.users.length}}</span></p>
            <p class="mt-2">VM content: <span class="text-purple-600">{{json vm}}</span></p>
        </div>
        <hr class="my-3 border-purple-200">
        <details class="text-purple-700">
            <summary class="cursor-pointer hover:text-purple-900 transition-colors">Raw data dump</summary>
            <pre class="mt-2 text-xs bg-purple-50 p-3 rounded-lg overflow-x-auto">{{json this}}</pre>
        </details>
    </div>

    {{#if vm.users}}
        {{#if (eq vm.users.length 1)}}
            <!-- Single user -->
            {{#with vm.users.[0]}}
            <div class="text-center mb-8">
                <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-purple-200/50 text-left max-w-2xl mx-auto">
                    <div class="flex items-center justify-between mb-6 pb-6 border-b border-purple-100">
                        <h2 class="text-3xl font-bold text-gray-800">{{name}}</h2>
                        <span class="bg-gradient-to-r from-purple-500 via-pink-500 to-indigo-500 text-white px-5 py-2 rounded-full text-sm font-semibold shadow-lg">ID: {{id}}</span>
                    </div>
                    
                    <div class="space-y-6 mb-8">
                        <div class="flex items-center space-x-4">
                            <div class="w-2 h-2 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full"></div>
                            <span class="font-semibold text-gray-600">Email:</span>
                            <a href="mailto:{{email}}" class="text-purple-600 hover:text-purple-800 transition-colors font-medium">{{email}}</a>
                        </div>
                        {{#if age}}
                        <div class="flex items-center space-x-4">
                            <div class="w-2 h-2 bg-gradient-to-r from-pink-400 to-indigo-400 rounded-full"></div>
                            <span class="font-semibold text-gray-600">Age:</span>
                            <span class="text-gray-800 font-medium">{{age}}</span>
                        </div>
                        {{/if}}
                    </div>
                    
                    <div class="flex flex-wrap gap-4 justify-center">
                        <button class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white px-8 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                            Edit Profile
                        </button>
                        <button class="bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 text-white px-8 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                            Send Message
                        </button>
                    </div>
                </div>
            </div>
            {{/with}}
        {{else}}
            <!-- Multiple users -->
            <div class="flex flex-col sm:flex-row justify-between items-center mb-8 bg-white/90 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-purple-200/50">
                <p class="text-xl font-semibold text-gray-700 mb-4 sm:mb-0">
                    <span class="bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">{{vm.users.length}}</span> 
                    users found
                </p>
                <a href="/users/new" class="bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white px-8 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                    Add User
                </a>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {{#each vm.users}}
                <article class="bg-white/95 backdrop-blur-sm rounded-2xl p-6 shadow-xl border border-purple-200/50 hover:shadow-2xl hover:border-purple-300/70 transform hover:-translate-y-2 transition-all duration-300 group">
                    <div class="flex items-start justify-between mb-4">
                        <h3 class="text-xl font-bold text-gray-800 truncate pr-4 group-hover:text-purple-700 transition-colors">{{name}}</h3>
                        <span class="bg-gradient-to-r from-indigo-400 to-purple-400 text-white px-3 py-1 rounded-full text-xs font-semibold shadow-md flex-shrink-0">ID: {{id}}</span>
                    </div>
                    
                    <div class="mb-6 space-y-3">
                        <div class="flex items-center space-x-2">
                            <div class="w-2 h-2 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full"></div>
                            <p class="text-purple-600 font-medium truncate">{{email}}</p>
                        </div>
                        {{#if age}}
                        <div class="flex items-center space-x-2">
                            <div class="w-2 h-2 bg-gradient-to-r from-pink-400 to-indigo-400 rounded-full"></div>
                            <p class="text-gray-600">Age: <span class="font-medium">{{age}}</span></p>
                        </div>
                        {{/if}}
                    </div>
                    
                    <div class="pt-4 border-t border-purple-100 flex gap-3">
                        <a href="/users/{{id}}" class="flex-1 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white px-4 py-2 rounded-lg text-center font-semibold shadow-md hover:shadow-lg transition-all duration-200 text-sm">
                            View
                        </a>
                        <a href="/users/{{id}}/edit" class="flex-1 bg-gradient-to-r from-gray-500 to-gray-600 hover:from-gray-600 hover:to-gray-700 text-white px-4 py-2 rounded-lg text-center font-semibold shadow-md hover:shadow-lg transition-all duration-200 text-sm">
                            Edit
                        </a>
                    </div>
                </article>
                {{/each}}
            </div>
        {{/if}}
    {{else}}
        <div class="text-center py-20">
            <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-12 shadow-2xl border border-purple-200/50 max-w-md mx-auto">
                <div class="w-20 h-20 bg-gradient-to-r from-purple-100 to-pink-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <div class="w-10 h-10 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full"></div>
                </div>
                <h2 class="text-3xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent mb-4">No Users Found</h2>
                <p class="text-gray-600 mb-8 text-lg">Get started by adding your first user to the system.</p>
                <a href="/users/new" class="bg-gradient-to-r from-purple-500 via-pink-500 to-indigo-500 hover:from-purple-600 hover:via-pink-600 hover:to-indigo-600 text-white px-8 py-4 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 inline-block">
                    Add First User
                </a>
            </div>
        </div>
    {{/if}}
</div>
